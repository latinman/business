<div class="row">
  <div class="col-md-6">
    <%= image_tag @product.image.url(:large) %>
  </div>
  <div class="col-md-6">
    <h4><%= @product.name %></h4>
    <%= @product.description %><br />
    <span class="price"><%= number_to_currency @product.price %></span> <%= button_to "Add to Cart", "#" %>
  </div>
</div>
