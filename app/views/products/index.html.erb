<div class="row">
  <h2>Products</h2>
  <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to product_path(product) do %>
              <%= image_tag product.image.url(:medium) %>
          <% end %>
          <div class="caption">
            <h4 class="text-center"><%= product.name %></h4>
            <p id="description"><%= product.description %></p>
            <strong>Member Price: <span class="price"><%= number_to_currency product.price %></span></strong>
            <h3 class="text-center"><%= link_to "Add to Cart", "#" %> <i class="ion-ios-cart"></i></h3>
          </div>
        </div>
      </div>
  <% end %>
</div>